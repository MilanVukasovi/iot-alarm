//Funkcija za promjenu melodije alarma pomoću stranice
int changeMelody(String data) {
  if(data == "0") {
    melodySound = 0;
  }
  if(data == "1") {
    melodySound = 1;
  }
  if(data == "2") {
    melodySound = 2;
  }
  return 0;
}

//Funckcija za prepoznavanje koju melodiju treba odsvirati
void playMelody() {
  Serial.print("\n playMelody");
  switch(melodySound) {
    case 0: firstMelody = true; break;
    case 1: secondMelody = true; break;
    case 2: thirdMelody = true; break;
  }
}

//Funkcija za prikaz sata
void displayClock(unsigned int hours, unsigned int minutes, unsigned int seconds){
    oled.clear(PAGE); 
    oled.setFontType(3); 
    oled.setCursor(0, 0); 

    printWithLeadZero(hours, 2); 

    if ((seconds % 2) == 0) 
        oled.print(":");    
    else                    
        oled.print(" ");    

    printWithLeadZero(minutes, 2);

    oled.display();
}

void printWithLeadZero(unsigned int n, int digits){
    for (int i=1; i<digits; i++){
        if (n < (pow(10, i))) 
            oled.print("0"); 
    }
    oled.print(n); 
}

